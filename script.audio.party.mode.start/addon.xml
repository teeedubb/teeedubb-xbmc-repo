<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.audio.party.mode.start" name="Music Party Mode" version="0.1.6" provider-name="teeedubb">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"> 
     <provides>audio</provides> 
  </extension> 
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Starts Music Party Mode.</summary>
    <description lang="en">Starts Music Party Mode, waits for X seconds then switches to full screen visualisation and optionally toggles the fullscreen music info after X seconds. Timeouts can be configured in addon settings, defaults are 5 seconds for each.</description>
    <platform>all</platform>
    <language>en</language>
    <forum>http://forum.xbmc.org/showthread.php?tid=166842</forum>
    <website>http://forum.xbmc.org/showthread.php?tid=166842</website>
    <source>https://github.com/teeedubb</source>
    <email></email>
	<assets>
		<icon>icon.png</icon>
		<fanart>fanart.jpg</fanart>
	</assets>
  </extension>
</addon>
